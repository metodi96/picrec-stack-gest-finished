                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textSize="20sp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/attractive_layout_group">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Agree"
                    android:id="@+id/first_attractive_layout"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree"
                    android:id="@+id/second_attractive_layout"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neither agree nor disagree"
                    android:id="@+id/third_attractive_layout"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disagree"
                    android:id="@+id/fourth_attractive_layout"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Disagree"
                    android:id="@+id/fifth_attractive_layout"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Applicable"
                    android:id="@+id/sixth_attractive_layout"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10. I became familiar with this recommender system very quickly.*"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textSize="20sp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/familiar_with_system_group">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Agree"
                    android:id="@+id/first_familiar_with_system"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree"
                    android:id="@+id/second_familiar_with_system"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neither agree nor disagree"
                    android:id="@+id/third_familiar_with_system"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disagree"
                    android:id="@+id/fourth_familiar_with_system"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Disagree"
                    android:id="@+id/fifth_familiar_with_system"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
