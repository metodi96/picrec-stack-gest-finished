                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textSize="20sp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/allowed_like_dislike_group">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Agree"
                    android:id="@+id/first_allowed_like_dislike"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree"
                    android:id="@+id/second_allowed_like_dislike"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neither agree nor disagree"
                    android:id="@+id/third_allowed_like_dislike"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
