                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textSize="20sp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/happy_with_generated_profile_group">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Agree"
                    android:id="@+id/first_happy_with_generated_profile"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree"
                    android:id="@+id/second_happy_with_generated_profile"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neither agree nor disagree"
                    android:id="@+id/third_happy_with_generated_profile"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disagree"
                    android:id="@+id/fourth_happy_with_generated_profile"/>
                <RadioButton
