                    android:id="@+id/sixth_familiar_with_system"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11. I feel in control of telling this recommender system what I want.*"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textSize="20sp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/in_control_group">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Agree"
                    android:id="@+id/first_in_control"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree"
                    android:id="@+id/second_in_control"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neither agree nor disagree"
                    android:id="@+id/third_in_control"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disagree"
                    android:id="@+id/fourth_in_control"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Disagree"
                    android:id="@+id/fifth_in_control"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Applicable"
                    android:id="@+id/sixth_in_control"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12. I understood why the profile was generated the way it was.*"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textSize="20sp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/understood_profile_group">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Agree"
                    android:id="@+id/first_understood_profile"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree"
                    android:id="@+id/second_understood_profile"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neither agree nor disagree"
                    android:id="@+id/third_understood_profile"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disagree"
                    android:id="@+id/fourth_understood_profile"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongly Disagree"
                    android:id="@+id/fifth_understood_profile"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
